<div id='actions'>
  <h2>Actions</h2>
  <ul>
    <li>
      <%= link_to 'Возврат ко всем отзывам',
                  refinery.feedbacks_admin_feedbacks_path,
                  :class => "back_icon" %>
    </li>
    <li>
      <%= link_to 'Удаление отзыва',
                  refinery.feedbacks_admin_feedback_path(@feedback),
                  :class => 'delete_icon no-tooltip confirm-delete',

                  :data => {
                    :confirm => 'Вы действительно хотите удалить отзыв?', :title => @feedback.name
                  },
                  :method => :delete %>
    </li>
  </ul>
</div>

<div id='records'>
  <h2>Feedback <%= @feedback.id %></h2>
  <table id='feedback'>
    <tr>
      <td>
        <strong>From</strong>
      </td>
      <td>
        <%= @feedback.name %> [<%= mail_to @feedback.email, @feedback.email, {:title => 'click to email'} %>]
      </td>
    </tr>
      <tr>
        <td>
          <strong>Requstion</strong>
        </td>
        <td>
          <%= @feedback.requestion %>
        </td>
      </tr>
    <% if @feedback.phone.blank? %>
      <tr>
        <td>
          <strong>Phone</strong>
        </td>
        <td>
          Не указан
        </td>
      </tr>
    <% else %>	
      <tr>
        <td>
          <strong>Phone</strong>
        </td>
        <td>
          <%= @feedback.phone %>
        </td>
      </tr>
    <% end %>
   <tr>
      <td valign='top'>
        <strong>Message</strong>
      </td>
      <td>
        <%= simple_format strip_tags(@feedback.message), :style => 'margin-top: 0' %>
      </td>
    </tr>
  </table>
</div>