<%= form_for @setting, :url => refinery.feedbacks_admin_setting_path do |f| %>

  <div class='field'>
    <span class='label_with_help'>
      <%= f.label :mail_adm, t('.settings_mail_adm_name') %>
    </span>
    <%= f.text_field :mail_adm, :value => @setting.mail_adm, :class => "larger widest" %>
  </div>

  <p>
    <%= t('.hint') %>
  </p>
  <p>
    <%= t('.example') %>
  </p>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :cancel_url => refinery.feedbacks_admin_feedbacks_path,
             :hide_delete => true  %>
<% end %>
