<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(setting) -%>">
  <span class='title'>
    <%= setting.question %>     [<%= mail_to setting.mail_otd, setting.mail_otd, {:title => 'click to email'} %>]

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.feedbacks_admin_setting_path(setting),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_feedbacks_admin_setting_path(setting),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.feedbacks_admin_setting_path(setting),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => setting.question),
        :method => :delete %>
  </span>
</li>
