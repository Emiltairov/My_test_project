<ul>
  <% if ::Refinery::Feedbacks::Admin::SettingsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.feedbacks_admin_settings_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_feedbacks_admin_setting_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Feedbacks::Admin::SettingsController.sortable? && ::Refinery::Feedbacks::Setting.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Settings"),
                 refinery.feedbacks_admin_settings_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Settings"),
                 refinery.feedbacks_admin_settings_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
